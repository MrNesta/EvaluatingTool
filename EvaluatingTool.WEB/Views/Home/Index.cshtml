@model EvaluatingTool.WEB.Models.SiteMapModel
@{
    ViewBag.Title = "Index";
}

@section Scripts{
<!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
<!--Reference the SignalR library. -->
<script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
<!--Reference the autogenerated SignalR hub script. -->
<script src="~/signalr/hubs"></script>
<!--SignalR script to update the chat page and send messages.-->
<script src="~/Scripts/progress-script.js"></script>
    }

<h2>Index</h2>

<div class="row">
    <div class="col-md-6">
        <div id="result"></div>
        <div class="progress progress-striped active" hidden>
            <div class="progress-bar" role="progressbar">
            </div>
        </div>
    </div>
</div>

@using (Html.BeginForm(new { @class = "form-horizontal", role = "form" }))
{
    @Html.ValidationSummary()
    if (ViewBag.Error != null)
    {
        <label>@ViewBag.Error</label>
    }
    <div class="form-group">
        @Html.Label("Enter the URL", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Host, new { @class = "form-control", id = "urltext" })            
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input id="submit" type="submit" class="btn btn-success" name="submit" value="Send" />
        </div>
    </div>
}
